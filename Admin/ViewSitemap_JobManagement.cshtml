                                    string sitemap_job_category_en = DB.getData(i, "sitemap_job_category_en", ViewBag.data_sitemap_job_category_rs);

                                    <option value="@tbl_sitemap_job_category_id">@sitemap_job_category_en</option>
                                }
                            </select>
                        </div>

                        <div class="form-group">
                            <label for="inputAddress">Sitemap [En]</label>
                            <input type="text" class="form-control" id="sitemap_job_name_en" placeholder="Sitemap [En]">
                        </div>

                        <div class="form-group">
                            <label for="inputZip">Sitemap [Ar]</label>
                            <input type="text" class="form-control" id="sitemap_job_name_ar" placeholder="Sitemap [Ar]">
                        </div>

                        <div class="form-group">
                            <label for="inputZip">Link [En]</label>
                            <input type="text" class="form-control" id="sitemap_job_link_en" placeholder="Link [En]">
                        </div>

                        <div class="form-group">
                            <label for="inputZip">Link [Ar]</label>
                            <input type="text" class="form-control" id="sitemap_job_link_ar" placeholder="Link [Ar]">
                        </div>

                        <div class="form-group">
                            <label for="inputZip">Parent</label>
                            <select id="parent_id" class="form-control">
                                <option value="">[Root]</option>
                                @{
                                    int serial_no = 0;
                                    string[] sitemap_job_arr = Regex.Split(ViewBag.sitemap_job_str_, ",");
                                    foreach (string sitemap_job_item in sitemap_job_arr)
                                    {
                                        if (string.IsNullOrEmpty(sitemap_job_item)) { continue; }

                                        string[] sitemap_job_item_arr = Regex.Split(sitemap_job_item, "~");
                                        string tbl_sitemap_job_id = sitemap_job_item_arr[0];
                                        string sitemap_job_name_en = sitemap_job_item_arr[1];
                                        string sitemap_job_name_ar = sitemap_job_item_arr[2];
                                        string level = sitemap_job_item_arr[3];
                                        string is_active = sitemap_job_item_arr[4];
                                        string sort_order = sitemap_job_item_arr[5];
                                        serial_no = serial_no + 1;

                                        string sitemap_job_levels_all_str = "";
                                        for (int j = 0; j < Convert.ToInt32(level); j++)
                                        {
                                            sitemap_job_levels_all_str = sitemap_job_levels_all_str + " |— ";
                                        }
                                        <option value="@tbl_sitemap_job_id">@sitemap_job_levels_all_str @sitemap_job_name_en</option>
                                    }
                                }
                            </select>
                        </div>


                    </form>
                    <div class="form-group">
                        <button class="btn btn-primary" onclick="ajax_create()">@CF.trans_code("en", "c122", "Submit")</button>
                    </div>
                </div>
            </div>
